---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Hero from "~/components/Hero.astro";
import { Picture, Image } from "astro:assets";
import Badge from "~/components/Badge.astro";
import Button from "~/components/Button.astro";
import ButtonCallUs from "~/components/ButtonCallUs.astro";
import Grid from "~/components/Grid.astro";
import Heading from "~/components/Heading.astro";
import WideImage from "~/components/WideImage.astro";
import ReviewSlider from "~/components/ReviewSlider.astro";

// Images
import PizzaHero from "~/assets/images/hero.jpg";
import CatalogHero from "~/assets/images/catalog.jpg"; // Duplicate - replace with catalog-specific image
import Pizza from "~/assets/images/alluminium.jpg";
import Spaghetti from "~/assets/images/steel.jpg";
import Fish from "~/assets/images/plastics.jpg";
import DecorativeImage from "~/assets/images/yard.jpg";
import reviewAuthors from "~/assets/images/review-authors.png";
import Dessert from "~/assets/images/businesshand.jpg";
import FinalCTA from "~/assets/images/forklift.jpg"; // Duplicate - replace with CTA-specific image
import Mussels from "~/assets/images/copper.jpg";
---

<Layout title="Home" pageTitle="Home" description="Global sourcing for industrial materials and equipment.">
	<Section class:list={"relative overflow-hidden"}>
		<div class="absolute inset-0 z-0">
			<Picture
				src={PizzaHero}
				formats={["avif", "webp"]}
				alt="Industrial materials background"
				class="w-full h-full object-cover"
				loading={"eager"}
				fetchpriority={"high"}
			/>
			<div class="absolute inset-0 bg-gradient-to-r from-white/95 via-white/85 to-white/70"></div>
		</div>
		
		<div class="relative z-10">
			<Hero>
				<div slot="hero-content-left" class="prose max-w-none">
					<Badge title="global sourcing" />
					<h1 class="font-black">Reliable sourcing for industrial materials worldwide</h1>

					<p>
						Access a comprehensive catalog of metals, plastics, chemicals, and industrial equipment. From scrap aluminum to specialized polymers, we connect buyers with quality materials and transparent logistics support across global supply chains.
					</p>

					<span class="text-brand-green font-medium">✔ Full logistics coordination available</span>

					<div class="mt-8 flex items-center gap-x-8">
						<Button url="/book">Request a quote</Button>
						<ButtonCallUs />
					</div>
				</div>
				<div slot="hero-content-right">
					<!-- Empty slot for layout balance -->
				</div>
			</Hero>
		</div>
	</Section>

	<Section class:list={"bg-white"}>
		<Heading>
			<h2 slot="heading-title" class="font-black text-brand-green h2">Material categories</h2>
			<p slot="heading-content">
				Explore our catalog of ferrous and non-ferrous scrap, polymers, chemicals, and industrial machinery.
			</p>
		</Heading>

		<Grid>
			<div slot="grid-content-1">
				<div class="flex flex-col h-full">
					<Picture
						class:list={"not-prose w-full aspect-square object-cover rounded-3xl shadow-lg"}
						src={Pizza}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<div class="prose text-center flex-1 flex flex-col justify-start mt-6">
						<h3 class="h4 mt-0 font-black">Aluminum Scrap</h3>
						<p class="flex-1">
							High-purity aluminum scrap including taint/tabor, UBC, tense, and segregated alloys. Sourced to ISRI specifications for downstream smelting and reprocessing.
						</p>
					</div>
				</div>
			</div>

			<div slot="grid-content-2">
				<div class="flex flex-col h-full">
					<Picture
						class:list={"not-prose w-full aspect-square object-cover rounded-3xl shadow-lg"}
						src={Spaghetti}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<div class="prose text-center flex-1 flex flex-col justify-start mt-6">
						<h3 class="h4 mt-0 font-black">Iron &amp; Steel Scrap</h3>
						<p class="flex-1">
							Ferrous scrap grades from HMS 1/2 to shredded steel and bundled materials. Verified grades for furnace feed and industrial re-melt applications.
						</p>
					</div>
				</div>
			</div>

		<div slot="grid-content-3">
			<div class="flex flex-col h-full">
				<Picture
					class:list={"not-prose w-full aspect-square object-cover rounded-3xl shadow-lg"}
					src={Fish}
					formats={["avif", "webp"]}
					alt="A description of my image."
				/>
				<div class="prose text-center flex-1 flex flex-col justify-start mt-6">
					<h3 class="h4 mt-0 font-black">Plastics &amp; Polymers</h3>
						<p class="flex-1">
							Post-consumer and post-industrial plastic scrap including PET, HDPE, LDPE, PP, and engineering resins. Clean bales and regrind ready for recycling.
						</p>
					</div>
				</div>
			</div>
		</Grid>
	</Section>

	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose lg:order-2">
				<h1 class="font-black">Comprehensive catalog</h1>

				<p>
					Our materials catalog spans ferrous and non-ferrous metals, engineering plastics, industrial chemicals, and decommissioned machinery. Each category includes detailed grade specifications, typical applications, and available volumes.
				</p>

				<p>
					Whether you're sourcing scrap for reprocessing or procuring raw materials for manufacturing, our catalog provides transparent product information and connects you with verified suppliers across global markets.
				</p>

				<div class="mt-8">
					<Button url="/menu">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 20 20"
							fill="currentColor"
							class="size-5 inline-block"
							aria-hidden="true"
						>
							<path
								fill-rule="evenodd"
								d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
								clip-rule="evenodd"></path>
						</svg>
						View catalog
					</Button>
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-[3rem] shadow-2xl"}
					src={CatalogHero}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
				/>
			</div>
		</Hero>
	</Section>

	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<Badge color="red" title="logistics" />
				<h2 class="font-black h2 !my-4">Inquiry of the week</h2>

				<span class="text-brand-red text-2xl font-bold italic">Copper cathode spot pricing</span>

				<p>
					This week we're highlighting copper cathode sourcing opportunities. Contact our team for current LME-indexed pricing, available volumes, and logistics support for container or bulk shipments.
				</p>

				<div class="mt-8">
					<Button color="red" url="/book">Request quote</Button>
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-[3rem] shadow-2xl"}
					src={Mussels}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
				/>
			</div>
		</Hero>
	</Section>

	<!-- Desserts -->
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none order-2">
				<Badge title="capabilities" />
				<h2 slot="heading-title" class="font-black text-brand-green h2 !my-4">Sourcing support</h2>
				<div slot="heading-content">
					<p>
						From grade verification to logistics coordination, our team provides end-to-end support for industrial material procurement. We handle documentation, compliance checks, and supply-chain visibility.
					</p>

					<p>
						Whether you need spot quantities or long-term supply contracts, we connect buyers with verified sources and facilitate transparent transactions across multiple jurisdictions.
					</p>

					<div class="mt-8">
						<Button url="/menu">Browse catalog</Button>
					</div>
				</div>
			</div>

			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-[3rem] shadow-2xl"}
					src={Dessert}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
				/>
			</div>
		</Hero>
	</Section>

	<!-- Contact -->
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none">
				<Badge color="red" title="get started" />
				<h2 slot="heading-title" class="font-black text-brand-red h2 !my-4">Ready to source materials?</h2>
				<div slot="heading-content">
					<p>
						Contact our sourcing team to discuss your material requirements, volume needs, and logistics preferences. We provide personalized support for both one-time purchases and ongoing supply relationships.
					</p>

					<span class="text-brand-red font-medium">
						✔ Flexible logistics options including FOB, CFR, and CIF terms
					</span>

					<div class="mt-8">
						<Button color="red" url="/book">Request a quote</Button>
					</div>
				</div>
			</div>

			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-[3rem] shadow-2xl"}
					src={FinalCTA}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
				/>
			</div>
		</Hero>
	</Section>
</Layout>
